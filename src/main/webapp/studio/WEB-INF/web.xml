<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>fh-studio</display-name>
  <description>fh-studio</description>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <listener>
    <listener-class>com.feedhenry.studio.StudioServletContextListener</listener-class>
  </listener>
  
  <servlet>
     <servlet-name>version</servlet-name>
     <jsp-file>/sys/info/version.jsp</jsp-file>
  </servlet>  
  <servlet-mapping>
    <servlet-name>version</servlet-name>
    <url-pattern>/sys/info/version</url-pattern>
  </servlet-mapping>
  
  <servlet>
     <servlet-name>ping</servlet-name>
     <jsp-file>/sys/info/ping.jsp</jsp-file>
  </servlet>  
  <servlet-mapping>
    <servlet-name>ping</servlet-name>
    <url-pattern>/sys/info/ping</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>

</web-app>
